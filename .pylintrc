[MASTER]
# Set Python path to include the current directory
init-hook='import sys; sys.path.append(".")'
extension-pkg-whitelist=pydantic

# Optional: Uncomment only if `pylint_django` is installed and needed
# load-plugins=pylint_django

[MESSAGES CONTROL]
# Show only these specific errors, add any specific checks to disable below
disable=

[REPORTS]
# Output format options: text, parseable, colorized, json, msvs, html
output-format=colorized

# Enable or disable the report at the end of the log
reports=yes

[DESIGN]
# Maximum number of parents for a class (R0901)
max-parents=15

# Maximum number of attributes for a class (R0902)
max-attributes=10

# Minimum number of public methods for a class (R0903)
min-public-methods=0

# Maximum number of public methods for a class (R0904)
max-public-methods=20

[BASIC]
# Naming conventions

# Variable names: lowercase letters, up to 31 characters
variable-rgx=[a-z_][a-z0-9_]{0,30}$

# Function names: lowercase, underscores for readability, 2-50 characters
function-rgx=[a-z_][a-z0-9_]{2,50}$

# Argument names: lowercase, underscores for readability, 1-30 characters
argument-rgx=[a-z_][a-z0-9_]{1,30}$

# Method names: lowercase, underscores for readability, 2-50 characters
method-rgx=[a-z_][a-z0-9_]{2,50}$

# Module names: lowercase, short names, discouraged use of underscores
module-rgx=[a-z_][a-z0-9_]{1,30}$

# Class names should use CamelCase
class-rgx=[A-Z][a-zA-Z0-9]+$
